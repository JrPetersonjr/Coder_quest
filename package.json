{
  "name": "technomancer",
  "version": "1.0.0",
  "description": "TECHNOMANCER: Quest for the Code - AI-powered retro RPG",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.technomancer.questforthecode",
    "productName": "TECHNOMANCER",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!server/**",
      "!*.md",
      "!.env*",
      "!.git/**"
    ],
    "win": {
      "target": "portable",
      "icon": "favicon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "favicon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "electron",
    "game",
    "rpg",
    "claude",
    "ai",
    "technomancer"
  ],
  "author": "JrPetersonjr",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": "18.x"
  }
}
